<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffff"
        android:padding="16dp">

        <TextView
            android:id="@+id/ploicyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitobextrabold"
            android:text="Pil-Pal Policies"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/policyOne"
            android:layout_width="275dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunitoregular"
            android:text="I agree not to use the Pil-Pal app for any illegal purposes."
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/policyTwo"
            android:layout_width="275dp"
            android:layout_height="45dp"
            android:fontFamily="@font/nunitoregular"
            android:text="I agree not to share false information such as false pharmaceutical counts and false stocks."
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/policyFive"
            android:layout_width="275dp"
            android:layout_height="54dp"
            android:fontFamily="@font/nunitoregular"
            android:text="I agree to update the pharmacy database regularly."
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/policyThree"
            android:layout_width="275dp"
            android:layout_height="88dp"
            android:fontFamily="@font/nunitoregular"
            android:text="I agree to provide my correct information to the Pil-Pal app such as pharmacy name, mobile number, email address, name, pharmacy license number, license expiration date, location and business hours.  "
            android:textColor="@color/black"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/policyFour"
            android:layout_width="275dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunitoregular"
            android:text="I understand that providing correct information causes user convenience, avoids problems and makes the Pil-Pal a valuable service."
            android:textColor="@color/black"
            android:textSize="14dp" />

        <Button
            android:id="@+id/aagreeButton"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:text="Agree"
            android:backgroundTint="#cc9900"
            android:fontFamily="@font/nunitobold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>